<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="searchResults">
    <isExposed>true</isExposed>
    <masterLabel>[Sample] Search Results</masterLabel>
    <description>Custom search results for the global search page</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="searchString" type="String" default="{!term}" label="Search Term"></property>
            <property name="objectApiName" type="String" default="Account" label="Search Results Object API Name"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>